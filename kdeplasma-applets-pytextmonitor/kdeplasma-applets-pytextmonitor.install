post_install()
{
  cat << EOF
Update plasmoids...
EOF
  kbuildsycoca4 > /dev/null 2>&1
  cat << EOF
Make sure that \`hddtemp\` can be run as non-root
EOF
}

post_upgrade()
{
  cat << EOF
Update plasmoids...
EOF
  kbuildsycoca4 > /dev/null 2>&1
}

post_remove()
{
  cat << EOF
Update plasmoids...
EOF
  kbuildsycoca4 > /dev/null 2>&1
}
