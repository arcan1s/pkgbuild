# Maintainer: Evgeniy "arcanis" Alexeev <arcanis.arch at gmail dot com>

pkgname=kwin-scripts-tiling
_pkgname=tiling
pkgver=1.3.1.1
pkgrel=1
pkgdesc="Tiling script for kwin"
arch=('any')
url="http://kde-look.org/content/show.php?content=161151"
license=('GPL')
depends=('kdebase-workspace')
makedepends=('kdebase-runtime')
source=(http://kde-look.org/CONTENT/content-files/161151-${_pkgname}.kwinscript)
md5sums=('543a669f1221843dda58661c39471ab6')

package()
{
  plasmapkg -p "${pkgdir}"/`kde4-config --prefix`/share/apps/kwin/scripts/ \
            -t kwinscript -i "${srcdir}"/161151-${_pkgname}.kwinscript
  # remove license file (as GPL)
  rm "${pkgdir}"/`kde4-config --prefix`/share/apps/kwin/scripts/kwin-script-tiling/LICENSE
  rm "${pkgdir}"/`kde4-config --prefix`/share/apps/kwin/scripts/kwin-script-tiling/README.md
}
